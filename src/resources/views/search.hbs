<div class="search-form mt-4">
    <form method="POST">
        <div class="mb-3">
            <label for="search-input" class="form-label">Từ khóa</label>
            <input type="text" name="q" class="form-control" id="search-input" placeholder="Nhập từ khóa...">
        </div>
        <div class="mb-3">
            <label for="gender-input" class="form-label">Disabled select menu</label>
            <select id="gender-input" class="form-select">
                <option value="male">Nam</option>
                <option value="female">Nữ</option>
            </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>